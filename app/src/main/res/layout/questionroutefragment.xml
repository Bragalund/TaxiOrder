<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/place_autocomplete_separator">

        <Button
            android:id="@+id/yes_route_fragment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/no_route_fragment_button"
            android:layout_alignBottom="@+id/no_route_fragment_button"
            android:layout_alignParentStart="true"
            android:layout_marginStart="65dp"
            android:text="Yes" />

        <Button
            android:id="@+id/no_route_fragment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="63dp"
            android:layout_marginTop="12dp"
            android:text="No" />
    </RelativeLayout>


</FrameLayout>