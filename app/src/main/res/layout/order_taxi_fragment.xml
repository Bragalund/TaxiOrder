<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/place_autocomplete_separator">

        <TextView
            android:id="@+id/order_taxi_fragment_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:text="Order taxi?" />

        <Button
            android:id="@+id/yes_order_taxi_fragment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/order_taxi_fragment_textView"
            android:layout_marginStart="61dp"
            android:layout_marginTop="19dp"
            android:text="Yes" />

        <Button
            android:id="@+id/no_order_taxi_fragment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/yes_order_taxi_fragment_button"
            android:layout_alignBottom="@+id/yes_order_taxi_fragment_button"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="63dp"
            android:text="No" />
    </RelativeLayout>


</FrameLayout>